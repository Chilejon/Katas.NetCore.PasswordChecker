@model LoginForm.Models.IndexModel
@{
    ViewData["Title"] = "Login";
}

<form action="../Home/Index" method="post">
    <label for="Password">Password</label>
    <input id="Password" name="password" type="text">
    <button type="submit">Submit</button>
    <div style="color:red; font-weight:bold">@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })@Html.DisplayFor(m => m.ErrorMessage, "", new { @class = "text-danger" })</div>
    
</form>

